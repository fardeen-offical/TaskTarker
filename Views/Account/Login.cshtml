@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="fas fa-user-lock fa-3x mb-2"></i>
                    <h3 class="font-weight-bold">Welcome Back</h3>
                    <p class="mb-0 small">Please login to manage your tasks</p>
                </div>
                <div class="card-body p-5">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <div class="form-group mb-4">
                            <label class="small mb-1 font-weight-bold">Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                <input type="text" name="username" class="form-control border-0 bg-light" placeholder="Enter username" required />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="small mb-1 font-weight-bold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-key text-muted"></i></span>
                                <input type="password" name="password" class="form-control border-0 bg-light" placeholder="Enter password" required />
                            </div>
                        </div>

                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger border-0 small py-2">
                                <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.Error
                            </div>
                        }

                        <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm mt-2">
                            Login Now <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    }
                </div>
                <div class="card-footer text-center py-3 bg-light border-0">
                    <div class="small text-muted font-italic">Default: admin / 123</div>
                </div>
            </div>
        </div>
    </div>
</div>