@{
    ViewBag.Title = "Contact Support";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-lg overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5 bg-primary text-white p-5 d-flex flex-column justify-content-center">
                        <h2 class="font-weight-bold mb-4">Get in Touch</h2>
                        <p class="mb-4 opacity-75">Koi sawal hai ya help chahiye? Humari team aapki madad ke liye hazir hai.</p>

                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-map-marker-alt fa-lg me-3"></i>
                            <span>Karachi, Pakistan</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-phone-alt fa-lg me-3"></i>
                            <span>+92 300 1234567</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-envelope fa-lg me-3"></i>
                            <span>support@taskharmony.com</span>
                        </div>
                    </div>

                    <div class="col-md-7 p-5 bg-white">
                        <h3 class="text-dark mb-4">Send us a Message</h3>
                        <form>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Aapka Naam</label>
                                <input type="text" class="form-control border-0 bg-light" placeholder="Fardeen Ali">
                            </div>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Email Address</label>
                                <input type="email" class="form-control border-0 bg-light" placeholder="name@example.com">
                            </div>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Message</label>
                                <textarea class="form-control border-0 bg-light" rows="4" placeholder="How can we help you?"></textarea>
                            </div>
                            <button type="button" class="btn btn-primary w-100 shadow-sm py-2 mt-3">
                                <i class="fas fa-paper-plane me-2"></i> Send Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>